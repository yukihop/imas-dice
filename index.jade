doctype html
html
  head
    meta(charset='UTF-8')
    title DICEGAME
    script(src='js/lib/jquery-2.1.0.min.js')
    script(src='js/lib/jquery-ui-1.10.4.min.js')
    script(src='js/lib/createjs-2013.12.12.min.js')
    script(src='js/lib/jquery.transit.min.js')
    script(src='js/main.js')
    link(rel='stylesheet' href='css/lib/jquery-ui-1.10.4.min.css')
    link(rel='stylesheet' href='css/style.css')
  body
    #main
      #gamemode
        #option
        #dicegame
          #field
          #battle
            #enemies
            #onboard_container
              #onboard
          #treasure
          #players
          #stack
            #dice_indicator
              span DICE x
              span.dice_stock
            .next
              span &lt;&lt;Next&nbsp;
              span.next_pips
          #hp_indicator_container
            #hp_indicator
              .hp_healbar
              .hp_damagebar
              .hp_bar
              .hp_value
          #stage_end
            #stage_failed
            #stage_failed_dice
          #game_result
            #stage_clear
            p 獲得経験値
              span.gain_exp
            #growth
            p
              button#result_ok OK
        #stage_select
          p ステージ選択
          ul#stage_list
          p ユニット編成
          ul#character_list
        #title
          p
            img#title_logo(src='images/title.png')
          p
            button.main_menu はじめる
          p 最新のデスクトップブラウザ(IE10+, Firefox, Chrome)でプレイしてください。古いブラウザでは動作しません。
        #tooltip
      #gamelog
    #templates
      .character
        .help
        .charge
        .multipliers
        .current_attack
        .status_list
        .mp_frame
          .mp_bar
        .popup
          .attribute
          div
            span.name
            | &nbsp;Lv
            span.lv
          div
            | HP:&nbsp;
            span.hp_max
          div.mp
          ul.skills
      .character_grow
        .name
        .exp_bar
        .exp_percentage
        p.changes
          | LV
          span.old_level
          | →
          span.new_level
        p.changes
          | HP
          span.old_hp
          | →
          span.new_hp
      .dice
      .block
      .enemy
        img.enemy_image
        .enemy_name
        .enemy_hp
          .enemy_hp_bar
          .enemy_hp_value
      .flytext
